    <%= form.label :ecole_id %>
    <%= form.select :ecole_id, Ecole.pluck(:libelle, :id) %>
  </div>

  <div class="field">
    <%= form.label :annee_id %>
    <%= form.select :annee_id, Annee.pluck(:libelle, :id) %>
  </div>

  <div class="field">
    <%= form.label :etudiant_id %>
    <%= form.select :etudiant_id, Etudiant.pluck(:nom, :id) %>
  </div>

  <div class="actions">
    <%= form.submit "VALIDER", :class => 'btn btn-primary' %>
  </div>
<% end %>

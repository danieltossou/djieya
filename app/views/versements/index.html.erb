<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="card">
      <div class="card-header">
      <h2 class="text-center">LISTE DES VERSEMENTS</h2>
      </div>
      <div class="card-body">
          <table class="table table-hover">
              <thead>
                <tr>
                  <th>Montant</th>
                  <th>User</th>
                  <th>Ecole</th>
                  <th>Annee</th>
                  <th>Etudiant</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @versements.each do |versement| %>
                  <tr>
                    <td><%= versement.montant %></td>
                    <td><%= versement.user_id %></td>
                    <td><%= versement.ecole_id %></td>
                    <td><%= versement.annee_id %></td>
                    <td><%= versement.etudiant_id %></td>
                    <td><%= link_to 'Show', versement %></td>
                    <td><%= link_to 'Edit', edit_versement_path(versement) %></td>
                    <td><%= link_to 'Destroy', versement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
        <div class="card-footer">
            <%= link_to 'Nouveau Versement', new_versement_path, :class => 'btn btn-primary' %>
            <%= link_to 'RETOUR', :back, :class => 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>

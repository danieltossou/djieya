<form action="<%=create_matiere_enseigne_path%>" method="post">
<div class="row">
    <div class="col-sm">
        <h3>Les enseignants</h3>
        <fieldset>
            <div class="">
                <% @enseignants.each do |enseignant| %>
                <label for="<%= enseignant.id %>"><%= "#{enseignant.nom} #{enseignant.prenom}" %></label>
                <input type="radio" name="enseignant[enseignant]" id="<%= enseignant.id %>" value="<%= enseignant.id %>">
                <% end %>
            </div>
        </fieldset>
    </div>
    <div class="col-sm">
        <h3>Les matières enseigné</h3>
    </div>
    <div class="col-sm">
        <h3>Les matières</h3>
        <fieldset>
            <div class="">
                <% @matieres.each do |matiere| %>
                    <label for="<%= matiere.id %>"><%= matiere.libelle %></label>
                    <input type="checkbox" name="enseignant[matiere]" id="<%= matiere.id %>" value="<%= matiere.id %>">
                <% end %>
            </div>
        </fieldset>
    </div>
    <input type="submit" value="Ajouter">
</div>
</form>
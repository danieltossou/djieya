<p id="notice"><%= notice %></p>

<h1>Heures</h1>

<table>
  <thead>
    <tr>
      <th>Libelle</th>
      <th>Ecole</th>
      <th>User</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @heures.each do |heure| %>
      <tr>
        <td><%= heure.libelle %></td>
        <td><%= heure.ecole_id %></td>
        <td><%= heure.user_id %></td>
        <td><%= heure.admin_id %></td>
        <td><%= link_to 'Show', heure %></td>
        <td><%= link_to 'Edit', edit_heure_path(heure) %></td>
        <td><%= link_to 'Destroy', heure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


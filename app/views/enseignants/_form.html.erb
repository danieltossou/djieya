<%= form_with(model: enseignant, local: true) do |form| %>

  <div class="row">
    <div class="col">
      <div class="field">
          <%= form.label :nom %>
          <%= form.text_field :nom, :class => 'form-control' %>
        </div>
      
        <div class="field">
          <%= form.label :prenom %>
          <%= form.text_field :prenom, :class => 'form-control' %>
        </div>
      
        <div class="field">
          <%= form.label :contact %>
          <%= form.number_field :contact, :class => 'form-control' %>
        </div>
    </div>
    <div class="col">
      <div class="field">
          <%= form.label :email %>
          <%= form.text_field :email, :class => 'form-control' %>
        </div>
      
        <div class="field">
          <%= form.label :adresse %>
          <%= form.text_field :adresse, :class => 'form-control' %>
        </div>
      
        <div class="field">
          <%= form.label :sexe %><br />
          Homme<%= form.radio_button :sexe, "Homme"%>
          Femme<%= form.radio_button :sexe, "Femme"%>
        </div>
    </div>
    <div class="col">
      <div class="field">
          <%= form.collection_check_boxes(:matiere_ids, Matiere.all, :id, :libelle, :label => "Les matières enseignés") %>
        </div><br>
      
        <div class="actions">
          <%= form.submit "VALIDER", :class => 'btn btn-primary' %>
        </div>
    </div>
  </div>
  
<% end %>

<div class="container">
  <div class="row">
    <h4>Liste des enseignants</h4>
    <button type="button" class="btn btn-success table-modal-btn" data-toggle="modal" data-target="#exampleModal">
      Nouvel Enseignant
    </button>
    <div class="form-group">
      <label for=""></label>
      <input type="text" class="form-control" name="" id="search" placeholder="@recherche">
    </div>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Adresse</th>
            <th>Ecole</th>
            <th>Utilisateur</th>
            <% if Admin? %>
            <th colspan="1">Action</th>
            <% end %>
          </tr>
        </thead>
      
        <tbody id="tbody">
          <% @enseignants.each do |enseignant| %>
            <tr>
              <td><%= enseignant.nom %></td>
              <td><%= enseignant.prenom %></td>
              <td><%= enseignant.contact %></td>
              <td><%= enseignant.email %></td>
              <td><%= enseignant.adresse %></td>
              <td><%= enseignant.ecole.libelle %></td>
              <td><%= enseignant.user.email if enseignant.user_id %></td>
              <!-- <td><%= link_to 'Show', enseignant %></td> -->
              <% if Admin? %>
                <td><%= link_to 'Modifier', edit_enseignant_path(enseignant), :class => 'action-link-color' %></td>
              <% end %>
              <!-- <td><%= link_to 'Destroy', enseignant, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
            </tr>
          <% end %>
        </tbody>
    </table>
    <%= link_to 'RETOUR', configuration_path, :class => 'btn btn-default' %>
    <%= link_to_previous_page @enseignants, '< PrÃ©cedent' %>
    <%= link_to_next_page @enseignants, 'Suivant >' %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">NOUVEL ENSEIGNANT</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <%= render 'form', enseignant: @enseignant %>
      </div>
    </div>
  </div>
</div>

<script>

    $('#search').on('input', () => {
      let search = $('#search').val();
      $.get('/enseignants/search', { id_search: search }, (data) =>{
        $('#tbody').empty()
        $('#tbody').append(data);
      })
  });
  </script>
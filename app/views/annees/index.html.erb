<div class="container">
    <div class="row justify-content-md-center">
        <div class="card">
            <div class="card-header">
            <h2 class="text-center">NOUVELLE ANNEE</h2>
            </div>
            <div class="card-body">
                <%= render 'form', annee: @annee %>
            </div>
            <div class="card-footer">
                <%= link_to 'RETOUR', configuration_path, :class => 'btn btn-default' %> 
            </div>
        </div>
    </div>
</div>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="card">
      <div class="card-header">
      <h2 class="text-center">LISTE DES ANNEES</h2>
      </div>
      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Libelle</th>
              <th>Etat</th>
              <th>User</th>
              <th colspan="2"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @annees.each do |annee| %>
              <tr>
                <td><%= annee.libelle %></td>
                <td><%= "Active " if annee.etat %><%= "Non active " if !annee.etat %></td>
                <td><%= annee.admin.email %></td>
                <td><%= link_to 'Show', annee %></td>
                <% if admin_signed_in? %>
                  <td><%= link_to 'Edit', edit_annee_path(annee) %></td>
                <% end %>
                <!--<td><%= link_to 'Destroy', annee, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
          <%= link_to 'RETOUR', configuration_path, :class => 'btn btn-default' %>

          <%= link_to_previous_page @annees, '< PrÃ©cedent' %>
          <%= link_to_next_page @annees, 'Suivant >' %>

      </div>
    </div>
  </div>
</div>
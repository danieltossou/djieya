<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <h4>Liste des salles</h4>
    <button type="button" class="btn btn-success table-modal-btn" data-toggle="modal" data-target="#exampleModal">
      Ajouter une salle
    </button>
    <div class="form-group">
      <label for=""></label>
      <input type="text" class="form-control" name="" id="" placeholder="@recherche">
    </div>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Libelle</th>
            <th>Ecole</th>
            <th>User</th>
            <th>Admin</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @salles.each do |salle| %>
          <tr>
            <td><%= salle.libelle %></td>
            <td><%= salle.ecole.libelle %></td>
            <td><%= Admin.find_by_id(salle.admin_id).email if salle.admin_id %></td>
            <td><%= User.find_by_id(salle.user_id).email if salle.user_id %></td>
            <td><%= link_to 'Show', salle %></td>
            <% if admin_signed_in? %>
              <td><%= link_to 'Edit', edit_salle_path(salle) %></td>
            <%  end %>
            <!--<td><%= link_to 'Destroy', salle, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          </tr>
          <% end %>
        </tbody>
    </table>
    <%= link_to 'RETOUR', configuration_path, :class => 'btn btn-default' %>
    <%= link_to_previous_page @salles, '< PrÃ©cedent' %>
    <%= link_to_next_page @salles, 'Suivant >' %>
  </div>
</div>

  <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">NOUVELLE SALLE</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render 'form', salle: @salle %>
        </div>
      </div>
    </div>
</div>
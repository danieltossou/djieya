<p id="notice"><%= notice %></p>

<h1>Salles</h1>

<table>
  <thead>
    <tr>
      <th>Libelle</th>
      <th>Ecole</th>
      <th>User</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salles.each do |salle| %>
      <tr>
        <td><%= salle.libelle %></td>
        <td><%= salle.ecole_id %></td>
        <td><%= salle.user_id %></td>
        <td><%= salle.admin_id %></td>
        <td><%= link_to 'Show', salle %></td>
        <td><%= link_to 'Edit', edit_salle_path(salle) %></td>
        <td><%= link_to 'Destroy', salle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


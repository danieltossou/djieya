<div class="container">
  <div class="row justify-content-md-center">
    <div class="card">
      <div class="card-body">
          <%= render 'form', ecole: @ecole %>
      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="card">
      <div class="card-header">
      <h2 class="text-center">LISTE DES ECOLES</h2>
      </div>
      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Libelle</th>
              <th>Etat</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @ecoles.each do |ecole| %>
              <tr>
                <td><%= ecole.libelle %></td>
                <td><%= ecole.etat %></td>
                <td><%= ecole.admin_id %></td>
                <td><%= link_to 'Show', ecole %></td>
                <td><%= link_to 'Edit', edit_ecole_path(ecole) %></td>
                <td><%= link_to 'Destroy', ecole, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
          <%= link_to 'RETOUR', configuration_path, :class => 'btn btn-default' %>

          <%= link_to_previous_page @ecoles, '< PrÃ©cedent' %>
          <%= link_to_next_page @ecoles, 'Suivant >' %>

      </div>
    </div>
  </div>
</div>
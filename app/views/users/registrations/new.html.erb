<h2>Inscription d'un nouvel utilisateur</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
      <%= f.label :nom %><br />
      <%= f.text_field :nom, autocomplete: "nom" %>
  </div>

  <div class="field">
      <%= f.label :prenom %><br />
      <%= f.text_field :prenom, autocomplete: "prenom" %>
  </div>

  <div class="field">
      <%= f.label :adresse %><br />
      <%= f.text_field :adresse, autocomplete: "adresse" %>
  </div>

  <div class="field">
      <%= f.label :contact %><br />
      <%= f.number_field :contact, autocomplete: "contact" %>
  </div>

  <div class="field">
      <%= f.label :sexe %><br />
      <%= f.radio_button :sexe, "Homme"%>
      <%= f.radio_button :sexe, "Femme"%>
  </div>

  <div class="field">
      <%= f.label :etat %><br />
      <%= f.check_box :etat, autocomplete: "etat" %>
  </div>

  <div class="field">
      <%= f.label :ecole %><br />
      <%= f.select :ecole_id, Ecole.pluck(:libelle, :id) %>
  </div>

  <div class="field">
    <%= f.hidden_field :admin_id, :value => current_admin.id %>
    <%= f.hidden_field :categorie, :value => 'directeur' %>
</div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

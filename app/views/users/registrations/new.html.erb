<div class="modal-body">
  <div class="">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center">NOUVEL UTILISATEUR</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-4">
            <div class="field">
              <%= f.label :Email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
            </div>
  
            <div class="field">
              <%= f.label :'Mot de passe' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
            </div>
  
            <div class="field">
              <%= f.label :'Confirmer mot de passe' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
            </div>
          </div>

          <div class="col-4">
            <div class="field">
              <%= f.label :Nom %><br />
              <%= f.text_field :nom, autocomplete: "nom", :class => 'form-control' %>
            </div>

            <div class="field">
                <%= f.label :Prenom %><br />
                <%= f.text_field :prenom, autocomplete: "prenom", :class => 'form-control' %>
            </div>

            <div class="field">
                <%= f.label :Adresse %><br />
                <%= f.text_field :adresse, autocomplete: "adresse", :class => 'form-control' %>
            </div>
          </div>

          <div class="col-4">
            <div class="field">
                <%= f.label :Contact %><br />
                <%= f.number_field :contact, autocomplete: "contact", :class => 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :Genre %><br />
              <div class="genre">
                Homme <%= f.radio_button :sexe, "Homme"%>
                Femme <%= f.radio_button :sexe, "Femme"%>
              </div>
            </div>

            <div class="field">
                <%= f.label 'Activer l\'utilisateur' %>
                <%= f.check_box :etat, autocomplete: "etat" %>
            </div>

            <div class="field">
                <%= f.label :Ecole %>
                <%= f.select :ecole_id, Ecole.pluck(:libelle, :id), :class => 'form-control' %>
            </div>  
          </div>
        </div>

        <% if current_admin %>
          <div class="field">
            <%= f.label :Categorie %>
            <%= f.select :categorie, ['Directeur'], :class => 'form-control' %>
            
        </div> 
      <% end %>
       
    </div>
  </div>

          <div class="field">
            <%# f.hidden_field :admin_id, :value => current_admin.id %>
            <%# f.hidden_field :categorie, :value => 'directeur' %>
          </div>

          <div class="actions">
            <%= f.submit "VALIDER", :class => 'btn btn-primary' %>
            <%= link_to "RETOUR", :back, :class => 'btn btn-default' %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

   
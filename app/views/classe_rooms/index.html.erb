<div class="container">
    <div class="row justify-content-md-center">
        <div class="card">
            <div class="card-header">
            <h2 class="text-center">NOUVELLE CLASSE</h2>
            </div>
            <div class="card-body">
                <%= render 'form', classe_room: @classe_room %>

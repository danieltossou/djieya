                <%= link_to 'RETOUR', configuration_path, :class => 'btn btn-default' %> 
            </div>
        </div>
    </div>
</div>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="card">
      <div class="card-header">
      <h2 class="text-center">LISTE DES CLASSES</h2>
      </div>
      <div class="card-body">
          <table class="table table-hover">
              <thead>
                <tr>
                  <th>Libelle</th>
                  <th>Etat</th>
                  <th>User</th>
                  <th>Admin</th>
                  <th>Montant</th>
                  <th>Ecole</th>
                  <th colspan="2"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @classe_rooms.each do |classe_room| %>
                  <tr>
                    <td><%= classe_room.libelle %></td>
                    <td><%= "Active " if classe_room.etat %><%= "Non active " if !classe_room.etat %></td>
                    <td><%= User.find_by_id(classe_room.user_id).email if classe_room.user_id %></td>
                    <td><%= Admin.find_by_id(classe_room.admin_id).email if classe_room.admin_id %></td>
                    <td><%= classe_room.montant %></td>
                    <td><%= classe_room.ecole.libelle %></td>
                    <% if admin_signed_in? %>
                      <td><%= link_to 'Show', classe_room %></td>
                    <% end %>
                    <td><%= link_to 'Edit', edit_classe_room_path(classe_room) %></td>
                    <!--<td><%= link_to 'Destroy', classe_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
                  </tr>
                <% end %>
              </tbody>
            </table>
      </div>
      <div class="card-footer">
          <%= link_to 'RETOUR', configuration_path, :class => 'btn btn-default' %>

          <%= link_to_previous_page @classe_rooms, '< PrÃ©cedent' %>
          <%= link_to_next_page @classe_rooms, 'Suivant >' %>

      </div>
    </div>
  </div>
</div>